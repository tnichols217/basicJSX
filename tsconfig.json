{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ESNext"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "ts-node": {
    "swc": true
  }
}
  